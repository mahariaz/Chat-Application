<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3.5"
    android:background="@color/black"
    tools:context=".new_grp_cnt_fragment">

    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="#575252">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/nu"
                >
            </ImageView>

            <TextView
                android:id="@+id/myname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="10dp"
                android:text="Maha"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginLeft="160dp"
                android:layout_toRightOf="@+id/myname"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="@color/purple_700">
            </TextView>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:weightSum="2"
        android:orientation="vertical">
        <RelativeLayout
            android:padding="15dp"
            android:id="@+id/newContactBtn"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_contact_icon">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/square">
                </ImageView>
                <ImageView
                    android:id="@+id/new_contact"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_person_add_24"
                    android:layout_centerInParent="true">
                </ImageView>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/new_contact_icon"
                android:text="New Contact"
                android:textColor="@color/white"
                android:textSize="17dp">

            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:padding="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_grp_icon">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/square">
                </ImageView>
                <ImageView
                    android:id="@+id/new_grp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/grp"
                    android:layout_centerInParent="true">
                </ImageView>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Group"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/new_grp_icon"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textSize="17dp">

            </TextView>

        </RelativeLayout>


    </LinearLayout>



    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>








</LinearLayout>